package com.grupo7.application.controller;

import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.*;

import java.util.ArrayList;
import java.util.List;
import java.util.Optional;
import java.util.concurrent.atomic.AtomicLong; // For generating unique IDs


@RestController // This annotation tells Spring: "This class handles web requests and returns data directly."
public class GestorRevisionManualController {

    // This method handles GET requests to the "/" endpoint.
    // When you visit http://localhost:8080/, it will return "Hello, World!"
    @GetMapping("/")
    public String home() {
        System.out.println("Received request for home endpoint."); // Log to console
        return "Hello, World!";
    }

    // This method handles GET requests to the "/greet" endpoint.
    // It can also take an optional 'name' parameter.
    // Examples:
    //   http://localhost:8080/greet          -> returns "Hello, Guest!"
    //   http://localhost:8080/greet?name=Alice -> returns "Hello, Alice!"
    @GetMapping("/greet")
    public String greet(@RequestParam(value = "name", defaultValue = "Guest") String name) {
        System.out.println("Received request for greet endpoint with name: " + name); // Log to console
        return String.format("Hello, %s!", name);
    }
}